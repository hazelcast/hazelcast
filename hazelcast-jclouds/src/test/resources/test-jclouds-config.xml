<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.6.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <properties>
        <property name="hazelcast.discovery.enabled">true</property>
    </properties>

    <network>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="false" />
            <aws enabled="false"/>
            <discovery-strategies>
                <discovery-strategy enabled="true" class="com.hazelcast.jclouds.JCloudsDiscoveryStrategy">
                    <properties>
                        <property name="provider">aws-ec2</property>
                        <property name="identity">test</property>
                        <property name="credential">test</property>
                        <property name="zones">zone1,zone2</property>
                        <property name="regions">region1,region2</property>
                        <property name="tag-keys">tag1,tag2</property>
                        <property name="tag-values">tagvalue1,tagvalue2</property>
                        <property name="group">group</property>
                        <property name="hz-port">5702</property>
                        <property name="credentialPath">myfile.json</property>
                        <property name="role-name">myRole</property>
                    </properties>
                </discovery-strategy>
            </discovery-strategies>
        </join>
    </network>

</hazelcast>
