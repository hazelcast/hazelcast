<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>hazelcast-tpc-engine-iouring</name>
    <artifactId>hazelcast-tpc-engine-iouring</artifactId>
    <description>The Hazelcast Thread-Per-Core engine: the io_uring Reactor</description>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.hazelcast</groupId>
        <artifactId>hazelcast-tpc-engine-parent</artifactId>
        <version>5.4.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <properties>
        <!-- Needed for CheckStyle -->
        <main.basedir>${project.parent.basedir}/..</main.basedir>
        <maven.ant-run-plugin>3.1.0</maven.ant-run-plugin>
        <lib.name>libiouring_hz.so</lib.name>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>

        <plugins>
            <!-- Includes generation of JNI headers -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <compilerArgs>
                        <arg>-h</arg>
                        <arg>${project.basedir}/src/main/c/include</arg>
                    </compilerArgs>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>

            <!-- Compilation of the C code -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>${maven.ant-run-plugin}</version>
                <executions>
                    <execution>
                        <id>compile-native</id>
                        <phase>compile</phase>
                        <configuration>
                            <target name="compile-native">
                                <property name="build.dir" value="target"/>
                                <property name="src.dir" value="src"/>
                                <property name="gcc.args" value="-O3 -fno-omit-frame-pointer -momit-leaf-frame-pointer"/>

                                <echo message="Compiling native library..."/>

                                <mkdir dir="${build.dir}/native"/>

                                <pathconvert property="src.native" pathsep=" ">
                                    <fileset dir="${src.dir}" includes="**/*.c"/>
                                </pathconvert>

                                <exec os="Linux" executable="gcc" failonerror="true">
                                    <arg line="-D_GNU_SOURCE -fPIC -shared -Wl,-soname,libiouring_hz.so ${gcc.args}
                                               -l:liburing.so
                                               -o ${build.dir}/native/libiouring_hz.so
                                               -I ${java.home}/include -I ${java.home}/include/linux
                                               -I ${java.home}/../include -I ${java.home}/../include/linux
                                               ${src.native} -ldl -lrt"/>
                                </exec>

                                <mkdir dir="${build.dir}/classes/lib/linux-x86_64"/>

                                <move verbose="true"
                                      failonerror="true"
                                      file="${build.dir}/native/libiouring_hz.so"
                                      todir="${build.dir}/classes/lib/linux-x86_64"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-tpc-engine</artifactId>
            <version>5.4.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-tpc-engine</artifactId>
            <version>5.4.0-SNAPSHOT</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

    </dependencies>
</project>
