<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.jboss.org/ironjacamar/schema/datasources_1_0.xsd">

	<xa-datasource jndi-name="java:/XADerbyDS" pool-name="XADerbyDS">
		<!-- <xa-datasource-property name="URL">jdbc:derby:myDB;create=true</xa-datasource-property> -->
		<xa-datasource-property name="Database">myDB</xa-datasource-property>
		<xa-datasource-property name="User">sa</xa-datasource-property>
		<xa-datasource-property name="Password"></xa-datasource-property>
		<xa-datasource-property name="CreateDatabase">create</xa-datasource-property>
		<xa-datasource-class>org.apache.derby.jdbc.EmbeddedXADataSource</xa-datasource-class>

		<xa-pool>
			<is-same-rm-override>false</is-same-rm-override>
			<!-- Uncomment to enable interleaving <interleaving/> -->
		</xa-pool>
	</xa-datasource>

</datasources>
